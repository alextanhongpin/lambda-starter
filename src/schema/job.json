{
    "id": "job.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Job Email Template",
    "description": "Email template payload for saved search feature that returns job recommendations",
    "type": "object",
    "definitions": {
        "job": {
            "properties": {
                "title": {
                    "type": "string"
                },
                "company": {
                    "type": "string"
                },
                "location": {
                    "type": "string"
                },
                "salary": {
                    "type": "string"
                },
                "sellingPoints": {
                    "type": "array"
                },
                "sellingPointsCount": {
                    "type": "integer"
                },
                "description": {
                    "type": "string"
                },
                "skill": {
                    "type": "string"
                },
                "companyLogo": {
                    "anyOf": [{
                        "type": "string",
                        "format": "url"
                    }, {
                        "type": "string",
                        "maxLength": 0
                    }]
                },
                "companyImage": {
                    "anyOf": [{
                        "type": "string",
                        "format": "url"
                    }, {
                        "type": "string",
                        "maxLength": 0
                    }]
                },
                "hasImages": {
                    "type": "boolean"
                },
                "isPremium": {
                    "type": "boolean"
                },
                "isLastItem": {
                    "type": "boolean"
                },
                "link": {
                    "type": "string",
                    "format": "url"
                },
                "isConfidential": {
                    "type": "boolean",
                    "description": "Blind flag to determine if the job is confidential or not"
                }
            },
            "required": [
                "title",
                "company",
                "description",
                "hasImages",
                "isPremium",
                "isLastItem",
                "link",
                "isConfidential"
            ]
        }
    },
    "allOf": [
        { "$ref": "#/definitions/job" }
    ]
}
{
    "id": "jobs.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Jobs",
    "description": "An array of jobs data",
    "type": "object",
    "properties": {
        "collections": {
            "type": "object",
            "properties": {
                "jobs": {
                    "type": "array",
                    "items": {
                        "$ref": "job.json"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "jobs"
            ]
        },
        "models": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "keyword": { "type": "string" },
                "location": { "type": "string" },
                "salary": { "type": "string" },
                "specialization": { "type": "string" },
                "count": { "type": "integer" },
                "unsubscribeLink": { "type": "string", "format": "url" },
                "termsLink": { "type": "string", "format": "url" },
                "privacyLink": { "type": "string", "format": "url" },
                "contactUsLink": { "type": "string", "format": "url" },
                "callToAction": { "type": "string", "default": "View more jobs" },
                "callToActionLink": { "type": "string", "format": "url" },
                "countryCopyrightName": { "type": "string", "minLength": 3, "description": "The copyright name that changes based on country", "default": "Malaysia" },
                "jobstreetLink": { "type": "string", "format": "url", "default": "http://www.jobstreet.com.my/" },
                "facebookLink": { "type": "string", "format": "url", "default": "https://www.facebook.com/jobstreet/" },
                "twitterLink": { "type": "string", "format": "url", "default": "https://twitter.com/jobstreetmy?lang=en" }
            },
            "required": [
                "name",
                "keyword",
                "location",
                "salary",
                "specialization",
                "count",
                "unsubscribeLink",
                "termsLink",
                "privacyLink",
                "contactUsLink",
                "callToActionLink",
                "countryCopyrightName"
            ]
        }
    },
    "required": [
        "collections"
    ]
}
{
    "id": "welcome.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Welcome Email Template",
    "description": "Welcome email template",
    "type": "object",
    "properties": {
        "model": {
            "properties": {
                "greeting": { "type": "string" }
            },
            "required": [
                "greeting"
            ]
        },
        "collections": {
            "type": "object",
            "properties": {
                "name": { "type": "string" }
            },
            "required": [
                "name"
            ]
        }
    },
    "required": ["model", "collections"]
}